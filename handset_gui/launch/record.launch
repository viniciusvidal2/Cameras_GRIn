<!--Launches the recording of the system messages. -->
<launch>
<!--arguments-->
<arg name="only_raw_data" default="true"/> <!--Whether or not to record only raw data-->
<arg name="bag" default="handset"/>
<arg name="folder" default="/home/$(env USER)/Desktop"/>

<param name="/use_sim_time" value="false"/>

<!--To record only raw data-->
<group if="$(arg only_raw_data)">
<node name="rosbag_record" pkg="rosbag" type="record" output="screen" args="/zed/odom /camera/rgb/image_raw /camera/depth/image_raw -O $(arg folder)/$(arg bag)">
</node>
</group>

<!--To record all data-->
<group unless="$(arg only_raw_data)">
<node name="rosbag_record" pkg="rosbag" type="record" output="screen" args="/zed/odom /camera/rgb/image_raw/compressed /camera/depth/image_raw/compressed -O $(arg folder)/$(arg bag)">
</node>
</group>
</launch>
